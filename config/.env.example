# Environment variables for Cosmic Social Network
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=localhost

# Database Configuration (MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cosmic-social?retryWrites=true&w=majority
DB_NAME=cosmic_social_network

# Database Configuration (PostgreSQL - Alternative)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cosmic_social
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Email Configuration
EMAIL_USER=noreply@cown.name.vn
EMAIL_PASSWORD=Huong1505@
EMAIL_HOST=smtp.cown.name.vn
EMAIL_PORT=587

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=12

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_PASSWORD=your_turn_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mp3,pdf,doc,docx

# Social Media Integration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Domain Configuration
DOMAIN=cown.name.vn
BASE_URL=https://cown.name.vn

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=https://cown.name.vn,http://localhost:3000

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
