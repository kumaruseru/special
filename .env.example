# ==============================================
# COSMIC SOCIAL NETWORK - Environment Template
# ==============================================
# ⚠️  SECURITY WARNING: NEVER commit .env to git!
# Copy this file to .env and fill in your REAL values

# Environment
NODE_ENV=development

# Server Configuration  
PORT=10000
HOST=0.0.0.0

# ===========================
# SECURITY (REQUIRED) - CHANGE ALL VALUES!
# ===========================
JWT_SECRET=CHANGE-THIS-TO-YOUR-SUPER-LONG-JWT-SECRET-AT-LEAST-64-CHARACTERS
ENCRYPTION_KEY=CHANGE-THIS-TO-32-CHARACTER-ENCRYPTION-KEY
SESSION_SECRET=CHANGE-THIS-TO-LONG-SESSION-SECRET

# ===========================
# Database Configuration (REQUIRED)
# ===========================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_MAX_POOL_SIZE=50
MONGODB_TIMEOUT=10000

# ===========================
# Email Configuration (REQUIRED)
# ===========================
SMTP_HOST=your-smtp-host.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-email-app-password
EMAIL_FROM=noreply@yourdomain.com

# Alternative naming (compatibility)
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASSWORD=your-email-app-password

# ===========================
# Security Configuration
# ===========================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://yourdomain.com
HELMET_ENABLED=true
XSS_PROTECTION=true

# ===========================
# Optional Databases
# ===========================
POSTGRES_URI=postgresql://username:password@host:port/database
REDIS_URI=redis://username:password@host:port
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ===========================
# Development Settings
# ===========================
LOG_LEVEL=info
DEBUG_MODE=false
VERBOSE_LOGGING=false
